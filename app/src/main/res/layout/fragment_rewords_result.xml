<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <cn.zxd.app.ui.view.countdown.DigitCountDownView
        android:id="@+id/dcdv_countDown"
        android:layout_width="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:text="退出"
        android:textColor="#0099CC"
        android:textSize="16sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_message2"
            android:layout_below="@id/tv_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pointAd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="192dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:src="@drawable/point_end" />

</RelativeLayout>